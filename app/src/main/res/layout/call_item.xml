<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:descendantFocusability="blocksDescendants"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewType"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewName"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/textViewType"
            android:layout_below="@+id/textViewType"
            android:singleLine="true"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPhone"
            android:textSize="14sp"
            android:layout_alignLeft="@+id/textViewType"
            android:layout_below="@+id/textViewName"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDate"
            android:textSize="16sp"
            android:layout_alignLeft="@+id/textViewPhone"
            android:layout_below="@+id/textViewPhone"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDuration"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textViewType"
            android:layout_marginRight="5dp"/>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxCall"
            android:layout_alignRight="@+id/textViewDuration"
            android:layout_alignBottom="@+id/textViewDate"/>

</RelativeLayout>